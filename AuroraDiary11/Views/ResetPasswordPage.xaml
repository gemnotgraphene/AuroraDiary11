<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuroraDiary.Views.ResetPasswordPage">
    <ContentPage.BackgroundImageSource>
        <FileImageSource File="background2.jpg"/>
    </ContentPage.BackgroundImageSource>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="CenterAndExpand">
            <Label Text="Forgot Password"
                   FontSize="36"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            <Label Text="Enter New Password"
                   FontSize="24"
                   HorizontalOptions="Center" />
            <Entry Placeholder="New Password" IsPassword="True" />
            <Entry Placeholder="Confirm Password" IsPassword="True" />
            <Button Text="Send"
                    BackgroundColor="Black"
                    TextColor="White"
                    Command="{Binding ResetCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
