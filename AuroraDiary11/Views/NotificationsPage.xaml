<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuroraDiary.Views.NotificationsPage">
    <ContentPage.BackgroundImageSource>
        <FileImageSource File="background2.jpg"/>
    </ContentPage.BackgroundImageSource>

    <StackLayout Padding="20">
        <Label Text="Notifications" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal" Padding="10">
            <Label Text="Memory reminder" VerticalOptions="Center"/>
            <Switch HorizontalOptions="EndAndExpand"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
