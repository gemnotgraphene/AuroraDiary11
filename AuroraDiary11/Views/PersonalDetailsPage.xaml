<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AuroraDiary.Views.PersonalDetailsPage"
             Title="Personal details">
    <ContentPage.BackgroundImageSource>
        <FileImageSource File="background2.jpg"/>
    </ContentPage.BackgroundImageSource>
    <StackLayout Padding="20">
        <Label Text="Personal details" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry Placeholder="Name"/>
        <Entry Placeholder="Last Name"/>
        <Entry Placeholder="Email"/>
        <Button Text="Confirm" BackgroundColor="Black" TextColor="White"/>
    </StackLayout>
</ContentPage>
